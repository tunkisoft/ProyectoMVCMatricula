
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/cssPropio.css" rel="stylesheet" />
<br />
<br />
<div class="row">
    <h3>Registro Docente</h3><br />
    <div class="col-md-3">
        <label><h4>Ingrese Modalidad Contrato:</h4></label>
    </div>
    <div class="col-md-4">
        <select id="cboTipoModalidad" class="form-control"></select>
    </div>
    <div class="col-md-pull-3">
        <button type="button" class="btn btn-primary" onclick="abrirModal(0)" data-toggle="modal" data-target="#myModal">
            Agregar
        </button>
    </div> 
</div>    
<br />
<br />
<div class="row">
    <div id="tabla">

    </div>
</div>

<!-- Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Crear Docente</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <table style="width:85%;margin:auto">
                    <tr>
                        <td width="40%">ID Docente :</td>
                        <td width="60%"><input class="borrar" type="text" id="txtIDDocente" readonly /></td>
                    </tr> 
                    <tr>
                        <td width="40%">Ingrese Nombre :</td>
                        <td width="60%"><input class="borrar obligatorio" type="text" id="txtDNombre" /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Apellido Paterno :</td>
                        <td width="60%"><input class="borrar obligatorio" type="text" id="txtDApellidoPaterno" /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Apellido Materno :</td>
                        <td width="60%"><input class="borrar obligatorio" type="text" id="txtDApellidoMaterno" /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Direccion :</td>
                        <td width="60%"><input class="borrar obligatorio" type="text" id="txtDireccion" /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Telefono Fijo :</td>
                        <td width="60%"><input class="borrar obligatorio" type="number" id="txtTelFijo" /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Telefono Celular :</td>
                        <td width="60%"><input class="borrar obligatorio" type="number" id="txtTelCelular" /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Email :</td>
                        <td width="60%"><input class="borrar obligatorio" type="email" id="txtEmail" /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Sexo :</td>
                        <td width="60%"><select class="borrar obligatorio" id="cboSexoDocente"></select></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Fecha Contrato :</td>
                        <td width="60%"><input class="borrar obligatorio" type="text" id="dtpFechaContrato" /></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Contrato :</td>
                        <td width="60%"><select class="borrar obligatorio" id="cboModalidadContrato"></select></td>
                    </tr>
                    <tr>
                        <td width="40%">Ingrese Foto :</td>
                        <td width="60%"><img id="imgFoto" width="200" height="100" style="border:1px solid" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="file" value="..." id="btnFoto"/></td>
                    </tr>
                     
                </table>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button onclick="Agregar()" id="btnAceptar" type="button" class="btn btn-success">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>

        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Docente.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
